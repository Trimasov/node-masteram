<div class="row">
    <div class="col-xs-12"><a href="/admin/banner_add?banner=new">Добавить новый</a></div>
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Список баннеров</h3>

                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody><tr>
                        <th>Дата создания</th>
                        <th>Район</th>
                        <th>Дни</th>
                        <th>Заголовок</th>
                        <th>Содержание</th>
                        <th>Включен/Выключен</th>
                        <th>Редактировать</th>
                    </tr>
                    <% banners.forEach((banner)=>{ %>
                    <tr>
                        <td><% let d = new Date(); d.setTime(banner.createdAt); %><%= `${d.getDate()}.${d.getMonth()}.${d.getFullYear()}` %></td>
                        <td><%= banner.topic %></td>
                        <td><%= banner.weekDay %></td>
                        <td><%= banner.title %></td>
                        <td><%= banner.text.length > 100 ? banner.text.slice(0, 100) + "..." : banner.text %></td>
                        <td><span class="label label-<%= banner.active ? "success" : "danger" %>"><%= banner.active ? "Включен" : "Выключен" %></span></td>
                        <td><a href="/admin/banner_add?banner=<%= banner.id %>">Изменить</a></td>
                    </tr>
                    <% }) %>

                    </tbody></table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>
