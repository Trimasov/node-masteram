<div class="row">
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-primary">
            <!-- form start -->
            <form role="form" name="saveBanner" method="post" enctype="multipart/form-data">
                <div class="box-body">
                    <div class="form-group">
                        <label for="message">Содержание</label>
                        <textarea class="form-control" id="message" name="message"><%= news ? news.message: ""%></textarea>
                    </div>
                    <div class="form-group">
                        <label for="topic">Город</label>
                        <select class="form-control" id="topic" name="topic">
                            <% for (let city in config.citylist) { %>
                            <option value="any">Все города</option>
                            <optgroup label="<%= city %>">
                                <% config.citylist[city].forEach((ele)=>{ %>
                                    <option value="<%= ele %>"><%= ele %></option>
                                <% }) %>
                            </optgroup>
                            <% } %>
                        </select>
                    </div>

                    <div class="checkbox">
                        <label>
                            <input value="1"  type="checkbox" name="active" <%= news.active ? "checked": "" %>/> Включить/выключить новость
                        </label>
                    </div>
                </div>
                <!-- /.box-body -->

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                </div>
            </form>
        </div>
        <!-- /.box -->

    </div>


</div>
