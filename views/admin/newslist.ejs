<div class="row">
    <div class="col-xs-12">

        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Новости</h3>
            </div>
            <!-- /.box-header -->

            <div class="box-body">
                <a href="/admin/news_add?news=new">Добавить новость</a>
                <table id="example2" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Текс</th>
                            <th>Дата создания</th>
                            <th>Город</th>
                            <th>Включенна</th>
                        </tr>
                    </thead>
                    <tbody>
                    <% news.forEach((n)=>{ %>
                        <tr>
                            <td><%= n.message %></td>
                            <td><% let d = new Date(); d.setTime(n.createdAt); %><%= `${d.getHours()}:${d.getMinutes()} ${d.getDate()}.${d.getMonth()}` %></td>
                            <td><%= n.topic %></td>
                            <td><%= n.active %></td>
                            <td><a href="/admin/news_add?news=<%= n.id %>">Изменить</a></td>
                        </tr>
                    <%  })%>
                    </tbody>
                    <tfoot>
                    <tr>
                        <th>Текс</th>
                        <th>Дата создания</th>
                        <th>Город</th>
                        <th>Включенна</th>
                    </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<script>
    $(function () {
        $('#example2').DataTable({
            'paging'      : true,
            'lengthChange': true,
            'searching'   : true,
            'ordering'    : true,
            'info'        : true,
            'autoWidth'   : false
        })
    })
</script>

